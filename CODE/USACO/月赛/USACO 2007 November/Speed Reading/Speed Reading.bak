var
 k,n:longint;
 s,t,r,i,j,m:longint;
 ans:longint;
begin
 readln(n,k);
 for i:=1 to k do 
 begin
  readln(s,t,r);
  m:=s;
  ans:=0;
	while m>s*t do  
		begin
			m:=m-s*t;
			ans:=ans+t+r; 
			continue;
		end;
	for j:=1 to t do 
		begin 
			if m<=0 then 
			begin 
				writeln(ans);break;
			end;
			m:=m-s;
			ans:=ans+1;
		end;
	writeln(ans);
 end;
end.